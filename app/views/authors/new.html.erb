<h1>New Author</h1>
<%= form_with scope: :author, url: authors_path,  local: true do |form| %>

    <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %><br>
    </p>

    <p>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %><br>
    </p>

    <p>
    <%= form.label :homepage %><br>
    <%= form.text_field :homepage %><br>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>
<%= link_to "Back", authors_path %>