<h1>Author List</h1>

<%= link_to "New Author", new_author_path %> </br>

<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
    </tr>
    <%= @authors.each do |author| %>
        <tr>
        <td><%= author.name %></td>
        <td><%= link_to author.homepage%></td>
        <td><%= link_to "Show", author_path(author) %></td>
        </tr>
    <% end %>
</table>